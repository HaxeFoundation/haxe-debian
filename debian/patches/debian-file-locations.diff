===================================================================
--- haxe.orig/haxe/main.ml	2010-09-15 21:42:56.000000000 +0200
+++ haxe/haxe/main.ml	2010-09-15 21:43:07.000000000 +0200
@@ -253,7 +253,7 @@
 	with
 		Not_found ->
 			if Sys.os_type = "Unix" then
-				com.class_path <- ["/usr/lib/haxe/std/";"/usr/local/lib/haxe/std/";"";"/"]
+				com.class_path <- ["./haxe/std/";"/usr/share/haxe/";"./"]
